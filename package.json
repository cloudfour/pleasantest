{
  "name": "pleasantest",
  "version": "1.7.0",
  "engines": {
    "node": "^12.2 || 14 || 16 || 17"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@ampproject/remapping": "2.1.2",
    "@babel/core": "7.16.7",
    "@babel/preset-env": "7.16.8",
    "@babel/preset-typescript": "7.16.7",
    "@changesets/changelog-github": "0.4.3",
    "@changesets/cli": "2.21.1",
    "@cloudfour/eslint-plugin": "18.0.0",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@testing-library/dom": "8.11.3",
    "@testing-library/jest-dom": "5.15.1",
    "@types/jest": "27.4.1",
    "@types/node": "12.20.47",
    "@types/polka": "0.5.4",
    "@types/puppeteer": "5.4.5",
    "@vue/compiler-sfc": "3.2.31",
    "ansi-regex": "6.0.1",
    "aria-query": "*",
    "babel-plugin-un-cjs": "2.5.0",
    "dom-accessibility-api": "0.5.13",
    "errorstacks": "2.4.0",
    "esbuild-jest": "0.5.0",
    "eslint": "8.12.0",
    "jest": "27.5.1",
    "kolorist": "1.5.1",
    "liquidjs": "9.35.1",
    "magic-string": "0.26.1",
    "polka": "0.5.2",
    "preact": "10.6.6",
    "prettier": "2.6.1",
    "prop-types": "15.8.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remark-cli": "10.0.1",
    "remark-lint-no-dead-urls": "1.1.0",
    "remark-validate-links": "11.0.2",
    "resolve.exports": "1.1.0",
    "rollup-plugin-dts": "4.2.0",
    "rollup-plugin-svelte": "7.1.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-vue": "6.0.0",
    "sass": "1.49.9",
    "simple-code-frame": "1.2.0",
    "smoldash": "0.11.0",
    "svelte": "3.46.4",
    "svelte-preprocess": "4.10.4",
    "typescript": "4.6.3",
    "vue": "3.2.31"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "acorn": "^8.7.0",
    "cjs-module-lexer": "^1.2.2",
    "es-module-lexer": "^0.10.4",
    "esbuild": "^0.14.27",
    "mime": "^3.0.0",
    "postcss": "^8.4.12",
    "puppeteer": "^13.1.3",
    "rollup": "^2.70.1",
    "rollup-plugin-postcss": "^4.0.2",
    "source-map": "0.8.0-beta.0"
  },
  "eslintConfig": {
    "extends": "plugin:@cloudfour/recommended",
    "reportUnusedDisableDirectives": true,
    "rules": {
      "@cloudfour/unicorn/filename-case": "off",
      "no-new-func": "off",
      "no-await-in-loop": "off",
      "@cloudfour/typescript-eslint/no-implied-eval": "off",
      "@cloudfour/typescript-eslint/no-misused-promises": "off",
      "@cloudfour/jsdoc/check-tag-names": [
        "error",
        {
          "jsxTags": true,
          "definedTags": [
            "jest-environment"
          ]
        }
      ],
      "@cloudfour/typescript-eslint/no-non-null-assertion": "off",
      "no-warning-comments": "off",
      "max-params": "off",
      "complexity": "off",
      "max-depth": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "main": "./dist/cjs/index.cjs",
  "exports": {
    "require": "./dist/cjs/index.cjs",
    "import": "./dist/esm/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "ci": "npm run type && npm run test && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js --watch",
    "type": "tsc",
    "type:watch": "tsc --watch",
    "lint:check": "eslint . && prettier --check . && remark README.md --frail",
    "lint": "eslint --fix . && prettier --write . && remark README.md --frail",
    "changeset": "changeset",
    "version": "changeset version && prettier --write .",
    "release": "npm run build && changeset publish"
  },
  "remarkConfig": {
    "plugins": [
      "remark-validate-links",
      "remark-lint-no-dead-urls"
    ]
  },
  "repository": "cloudfour/pleasantest"
}
