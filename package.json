{
  "name": "pleasantest",
  "version": "0.3.0",
  "engines": {
    "node": "12 || 14"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-typescript": "7.13.0",
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@cloudfour/eslint-plugin": "16.0.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@testing-library/dom": "7.31.0",
    "@testing-library/jest-dom": "5.12.0",
    "@types/jest": "26.0.23",
    "@types/node": "15.6.0",
    "@types/puppeteer": "5.4.3",
    "ansi-regex": "6.0.0",
    "aria-query": "*",
    "babel-plugin-un-cjs": "2.3.0",
    "env-paths": "2.2.1",
    "errorstacks": "2.3.2",
    "esbuild": "0.12.1",
    "esbuild-jest": "0.5.0",
    "eslint": "7.27.0",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "kolorist": "1.4.1",
    "liquidjs": "9.25.0",
    "preact": "10.5.13",
    "prettier": "2.3.0",
    "remark-cli": "9.0.0",
    "remark-lint-no-dead-urls": "1.1.0",
    "remark-validate-links": "10.0.4",
    "rollup": "2.39.1",
    "rollup-plugin-dts": "2.0.1",
    "rollup-plugin-prettier": "2.1.0",
    "rollup-plugin-terser": "7.0.2",
    "sass": "1.34.0",
    "smoldash": "0.9.0",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@types/testing-library__jest-dom": "^5.9.5",
    "puppeteer": "^9.1.1",
    "source-map": "^0.7.3",
    "vite": "2.0.0-beta.52"
  },
  "eslintConfig": {
    "extends": "plugin:@cloudfour/recommended",
    "rules": {
      "@cloudfour/unicorn/filename-case": "off",
      "no-new-func": "off",
      "no-await-in-loop": "off",
      "@cloudfour/typescript-eslint/no-implied-eval": "off",
      "@cloudfour/typescript-eslint/no-misused-promises": "off",
      "@cloudfour/jsdoc/check-tag-names": [
        "error",
        {
          "jsxTags": true,
          "definedTags": [
            "jest-environment"
          ]
        }
      ],
      "@cloudfour/typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "main": "./dist/cjs/index.cjs",
  "exports": {
    "require": "./dist/cjs/index.cjs",
    "import": "./dist/esm/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "ci": "npm run type && npm run test && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js --watch",
    "type": "tsc",
    "type:watch": "tsc --watch",
    "lint:check": "eslint . && prettier --check . && remark . --frail",
    "lint": "eslint --fix . && prettier --write . && remark . --frail",
    "changeset": "changeset",
    "version": "changeset version && prettier --write .",
    "release": "npm run build && changeset publish"
  },
  "remarkConfig": {
    "plugins": [
      "remark-validate-links",
      "remark-lint-no-dead-urls"
    ]
  },
  "repository": "cloudfour/pleasantest"
}
