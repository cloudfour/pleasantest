{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "test-mule": ["./src"]
    },
    "importsNotUsedAsValues": "error",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2019",
    "types": ["jest"],
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "examples/**/*.ts", "types.d.ts"]
}
